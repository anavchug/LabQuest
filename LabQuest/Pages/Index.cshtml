@page
@model LabQuest.Pages.Labs.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Learning Platform</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Learning Platform</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#labs">Labs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#tracks">Tracks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#community">Community</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#profile">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="position-relative">
        <!-- Background Image -->
        <img src="https://via.placeholder.com/1500x500" class="img-fluid w-100" alt="Hero Background">
        <!-- Overlay -->
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center bg-dark bg-opacity-50">
            <h1 class="display-4 text-white">Welcome to Your Learning Lab</h1>
            <p class="lead text-white">Explore interactive labs and tracks to enhance your skills.</p>
            <a href="#startLab" class="btn btn-primary btn-lg">Start Your Lab</a>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container my-5">
        <section id="labs" class="mb-5">
            <h2>Labs</h2>
            <p>Content for labs...</p>

            <ul>
                @if (Model.Labs != null && Model.Labs.Any())
        {
            foreach (var lab in Model.Labs)
            {
                <li>@lab.Title - @lab.Description</li>
            }
        }
        else
        {
                <li>No labs available.</li>
        }
            </ul>
        </section>
        <section id="tracks" class="mb-5">
            <h2>Tracks</h2>
            <p>Content for tracks...</p>
        </section>
        <section id="community" class="mb-5">
            <h2>Community</h2>
            <p>Content for community...</p>
        </section>
        <section id="profile" class="mb-5">
            <h2>Profile</h2>
            <p>Content for profile...</p>
        </section>
    </div>

    <!-- Footer Section -->
    <footer class="bg-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About</h5>
                    <ul class="list-unstyled">
                        <li><a href="#about" class="text-decoration-none">Our Story</a></li>
                        <li><a href="#team" class="text-decoration-none">Team</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li><a href="#contact" class="text-decoration-none">Email Us</a></li>
                        <li><a href="#location" class="text-decoration-none">Location</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Help</h5>
                    <ul class="list-unstyled">
                        <li><a href="#faq" class="text-decoration-none">FAQ</a></li>
                        <li><a href="#support" class="text-decoration-none">Support</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
